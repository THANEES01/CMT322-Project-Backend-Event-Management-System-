<!-- views/Audience/payment-failed.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Failed - Kalakshetra 6.0</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/Style/style.css">
    <style>
        body {
            background-image: linear-gradient(
                rgba(0, 0, 0, 0.5),
                rgba(0, 0, 0, 0.848)
            ),
            url("/Pictures/Baratham_Pic3.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            min-height: 80vh;
        }

        .container {
            width: 60%;
            max-width: 1000px;
            background-color: var(--card-bg);
            border-radius: 25px;
            padding: 4rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            margin-top: 60px;
            color: white;
            text-align: center;
        }

        .error-icon {
            font-size: 4rem;
            color: #dc3545;
            margin-bottom: 2rem;
        }

        .btn-retry {
            background-color: #d2a679;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            margin-top: 20px;
            transition: all 0.3s ease;
        }

        .btn-retry:hover {
            background-color: #c19264;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="error-icon">âœ•</div>
        <h1 class="mb-4">Payment Failed</h1>
        <p class="mb-4"><%= message %></p>
        <p class="text-muted mb-4"><%= error %></p>
        <div class="mt-4">
            <a href="/tickets" class="btn btn-retry">Try Again</a>
            <a href="/" class="btn btn-retry ml-3">Return to Home</a>
        </div>
    </div>
</body>
</html>