<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Merchandise Management - Kalakshetra 6.0</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        /* Include your CSS here */
        body {
            background-color: #ffffff;
        }
    
        .sidebar {
            background-color: rgba(16, 29, 44, 0.95);
            min-height: 100vh;
            padding-top: 20px;
        }
    
        .sidebar-header {
            color: #ffffff;
            padding: 15px;
            text-align: center;
            border-bottom: 3px ridge rgba(215, 0, 0, 0.685);
        }
    
        /* Rest of your CSS styles */
    </style>
    
</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="position-sticky">
                    <div class="sidebar-header">
                        <h3>Admin Panel</h3>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin">
                                <i class="fas fa-users"></i> Participant Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/audience">
                                <i class="fas fa-ticket-alt"></i> Audience Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/merchandise">
                                <i class="fas fa-ticket-alt"></i> Merchandise Management
                            </a>
                        </li>
                        <!-- Other menu items -->
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

    <!-- Admin panel sidebar -->
    <div class="container-fluid">
        <div class="row">
            <!-- Include your admin sidebar -->

            <main class="col-md-10 ms-sm-auto px-4">
                <h2 class="my-4">Merchandise Management</h2>

                <!-- Add New Merchandise Form -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Add New Merchandise</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/merchandise/add" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name" class="form-label">Merchandise Name</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Price (RM)</label>
                                <input type="number" step="0.01" class="form-control" id="price" name="price" required>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Image</label>
                                <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Merchandise</button>
                        </form>
                    </div>
                </div>

                <!-- Existing Merchandise List -->
                <div class="card">
                    <div class="card-header">
                        <h4>Current Merchandise</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% merchandise.forEach(item => { %>
                                        <tr>
                                            <td>
                                                <img src="<%= item.image_path %>" alt="<%= item.name %>" style="height: 50px;">
                                            </td>
                                            <td><%= item.name %></td>
                                            <td>RM <%= item.price.toFixed(2) %></td>
                                            <td>
                                                <button class="btn btn-danger btn-sm">Delete</button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

