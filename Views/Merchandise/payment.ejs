<!-- views/merchandise/payment.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment - Kalakshetra 6.0</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="/Style/style.css" rel="stylesheet">
    <script src="https://js.stripe.com/v3/"></script>
    <style>
        body {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.848)), url("/Pictures/BackgroundPic1.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            min-height: 100vh;
            padding: 40px 0;
            color: white;
        }

        .payment-container {
            background-color: rgba(16, 29, 44, 0.95);
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            padding: 30px;
            max-width: 800px;
            margin: 0 auto;
        }

        .order-details, .customer-details {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .item-row {
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .item-row:last-child {
            border-bottom: none;
        }

        .item-image {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
        }

        #payment-form {
            background-color: rgba(255, 255, 255, 0.05);
            padding: 20px;
            border-radius: 8px;
        }

        #payment-element {
            margin-bottom: 24px;
            background-color: rgba(255, 255, 255, 0.1);
            padding: 15px;
            border-radius: 8px;
        }

        #submit-button {
            background-color: #16d50c;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 25px;
            width: 100%;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        #submit-button:hover {
            background-color: #6b6bc5;
            transform: scale(1.02);
        }

        #submit-button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .error-message {
            color: #ff6b6b;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 5px solid #f3f3f3;
            border-top: 5px solid #16d50c;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .text-price {
            color: #16d50c;
        }
    </style>
</head>
<body>
    <div class="loading-overlay">
        <div class="spinner"></div>
    </div>

    <div class="container">
        <div class="payment-container">
            <h2 class="text-center mb-4">Complete Your Purchase</h2>

            <!-- Customer Details Section -->
            <div class="customer-details">
                <h4>Customer Information</h4>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Name:</strong> <%= order.full_name %></p>
                        <p><strong>Matric Number:</strong> <%= order.matric_number %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Email:</strong> <%= order.email %></p>
                        <p><strong>Phone:</strong> <%= order.phone %></p>
                    </div>
                </div>
            </div>

            <!-- Order Items Section -->
            <div class="order-details">
                <h4>Order Items</h4>
                <% order.items.forEach(function(item) { %>
                    <div class="item-row">
                        <div class="row align-items-center">
                            <div class="col-2">
                                <img src="<%= item.image_path %>" class="item-image" alt="<%= item.name %>">
                            </div>
                            <div class="col-4">
                                <h6 class="mb-0"><%= item.name %></h6>
                                <small>RM<%= item.price.toFixed(2) %> each</small>
                            </div>
                            <div class="col-3 text-center">
                                Quantity: <%= item.quantity %>
                            </div>
                            <div class="col-3 text-right">
                                <span class="text-price">RM<%= (item.price * item.quantity).toFixed(2) %></span>
                            </div>
                        </div>
                    </div>
                <% }); %>

                <div class="mt-3 pt-3 border-top">
                    <div class="row">
                        <div class="col-9 text-right">
                            <strong>Total Amount:</strong>
                        </div>
                        <div class="col-3 text-right">
                            <strong class="text-price">RM<%= order.total_amount %></strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Form -->
            <div class="payment-section">
                <h4 class="mb-3">Payment Details</h4>
                <form id="payment-form">
                    <div id="payment-element"></div>
                    <button id="submit-button" type="submit">
                        <span id="button-text">Pay RM<%= order.total_amount %></span>
                    </button>
                    <div id="payment-message" class="error-message mt-2"></div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const stripe = Stripe('<%= stripePublicKey %>');
    const clientSecret = '<%= clientSecret %>';
    const loadingOverlay = document.querySelector('.loading-overlay');

    let elements;
    let paymentElement;

    async function initialize() {
        elements = stripe.elements({
            clientSecret,
            appearance: {
                theme: 'night',
                variables: {
                    colorPrimary: '#16d50c',
                }
            }
        });

        paymentElement = elements.create('payment', {
            layout: 'tabs',
            defaultValues: {
                billingDetails: {
                    name: '<%= order.full_name %>',
                    email: '<%= order.email %>',
                    phone: '<%= order.phone %>'
                }
            }
        });

        await paymentElement.mount('#payment-element');
    }

    initialize();

    document.querySelector('#payment-form').addEventListener('submit', handleSubmit);

    async function handleSubmit(e) {
        e.preventDefault();
        setLoading(true);

        try {
            const { error } = await stripe.confirmPayment({
                elements,
                confirmParams: {
                    return_url: `${window.location.origin}/merchandise/payment-success`,
                    payment_method_data: {
                        billing_details: {
                            name: '<%= order.full_name %>',
                            email: '<%= order.email %>',
                            phone: '<%= order.phone %>'
                        }
                    }
                }
            });

            if (error) {
                showMessage(error.message);
                setLoading(false);
            }
            // If successful, the return_url will handle the redirect
        } catch (error) {
            console.error('Payment error:', error);
            showMessage('An unexpected error occurred.');
            setLoading(false);
        }
    }

    function showMessage(messageText) {
        const messageElement = document.getElementById('payment-message');
        messageElement.textContent = messageText;
        messageElement.style.display = 'block';
    }

    function setLoading(isLoading) {
        const submitButton = document.querySelector('#submit-button');
        const buttonText = document.querySelector('#button-text');
        loadingOverlay.style.display = isLoading ? 'flex' : 'none';
        
        submitButton.disabled = isLoading;
        buttonText.textContent = isLoading ? 'Processing...' : `Pay RM<%= order.total_amount %>`;
    }
    </script>
</body>
</html>