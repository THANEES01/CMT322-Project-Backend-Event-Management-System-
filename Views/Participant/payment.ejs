<!-- views/participant/payment.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment - Kalakshetra 6.0</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/Style/style.css">
    <script src="https://js.stripe.com/v3/"></script>
    <style>
        body {
            background-image: linear-gradient(
                rgba(0, 0, 0, 0.5),
                rgba(0, 0, 0, 0.848)
            ),
            url("/Pictures/Baratham_Pic3.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            min-height: 80vh;
        }

        .container {
            width: 60%;
            max-width: 1000px;
            background-color: rgba(16, 29, 44, 0.95);
            border-radius: 25px;
            padding: 4rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            margin-top: 60px;
            color: white;
        }

        .order-summary {
            background-color: rgba(47, 51, 57, 0.8);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .summary-item:last-child {
            border-bottom: none;
            font-weight: bold;
        }

        #card-element {
            background-color: rgba(47, 51, 57, 0.8) !important;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid rgba(72, 68, 68, 0.5);
            min-height: 45px;
        }

        .StripeElement {
            width: 100%;
            background-color: transparent !important;
        }

        .StripeElement--focus {
            border-color: #d2a679;
        }

        .form-control {
            background-color: transparent;
        }

        #card-element.StripeElement--focus {
            border-color: #d2a679;
            box-shadow: 0 0 0 2px rgba(210, 166, 121, 0.2);
        }

        .btn-pay {
            background-color: #8B1F2F;
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            width: 100%;
            margin-top: 20px;
            transition: all 0.3s ease;
        }

        .btn-pay:hover {
            background-color: #6b1824;
            transform: translateY(-2px);
        }

        .btn-pay:disabled {
            background-color: #8a7259;
            cursor: not-allowed;
            transform: none;
        }

        #card-errors {
            color: #ff6b6b;
            font-size: 0.9rem;
            margin-top: 10px;
            text-align: center;
        }

        .payment-status {
            text-align: center;
            margin-top: 20px;
            padding: 10px;
            border-radius: 5px;
            display: none;
        }

        .payment-status.success {
            background-color: rgba(40, 167, 69, 0.2);
            color: #2ecc71;
        }

        .payment-status.error {
            background-color: rgba(231, 76, 60, 0.2);
            color: #e74c3c;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed">
        <div class="container">
            <a class="navbar-brand" href="/">Kalakshetra 6.0</a>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Complete Your Payment</h1>
        
        <div class="order-summary">
            <h4 class="mb-3">Registration Details</h4>
            <div class="summary-item">
                <span>Team Name:</span>
                <span><%= teamName %></span>
            </div>
            <div class="summary-item">
                <span>Leader Name:</span>
                <span><%= leaderName %></span>
            </div>
            <div class="summary-item">
                <span>Email:</span>
                <span><%= email %></span>
            </div>
            <div class="summary-item">
                <span>Registration Fee:</span>
                <span>RM <%= amount %>.00</span>
            </div>
        </div>

        <form id="payment-form">
            <div class="form-group">
                <label>Card Information</label>
                <div id="card-element" class="form-control">
                    <!-- Stripe Card Element will be inserted here -->
                </div>
                <div id="card-errors" role="alert"></div>
            </div>
            <button type="submit" class="btn btn-pay" id="submit-button">
                Pay RM <%= amount %>.00
            </button>
        </form>

        <div class="payment-status" id="payment-status"></div>
    </div>

    <script>
          // Initialize Stripe with public key
    const stripe = Stripe('<%= stripePublicKey %>');
    const elements = stripe.elements();

    // Create card element with styling
    const cardElement = elements.create('card', {
        style: {
            base: {
                color: '#ffffff',
                fontFamily: '"Poppins", sans-serif',
                fontSmoothing: 'antialiased',
                fontSize: '16px',
                backgroundColor: 'transparent',
                '::placeholder': {
                    color: '#aab7c4'
                }
            },
            invalid: {
                color: '#fa755a',
                iconColor: '#fa755a'
            }
        },
        hidePostalCode: true
    });

    cardElement.mount('#card-element');

    const form = document.getElementById('payment-form');
    const submitButton = document.getElementById('submit-button');
    const paymentStatus = document.getElementById('payment-status');

    form.addEventListener('submit', async (event) => {
        event.preventDefault();
        submitButton.disabled = true;
        submitButton.textContent = 'Processing Payment...';

        try {
            const { error, paymentIntent } = await stripe.confirmCardPayment('<%= clientSecret %>', {
                payment_method: {
                    card: cardElement,
                    billing_details: {
                        name: '<%= leaderName %>',
                        email: '<%= email %>'
                    }
                }
            });

            if (error) {
                throw error;
            }

           // In payment.ejs, update the redirect part in your form submission handler
            if (paymentIntent.status === 'succeeded') {
                paymentStatus.textContent = 'Payment successful! Redirecting...';
                paymentStatus.className = 'payment-status success';
                paymentStatus.style.display = 'block';

                // Update the redirect URL
                window.location.href = `/participant/payment-success?payment_intent=${paymentIntent.id}`;
            }

        } catch (error) {
            console.error('Payment error:', error);
            paymentStatus.textContent = error.message;
            paymentStatus.className = 'payment-status error';
            paymentStatus.style.display = 'block';
            
            submitButton.disabled = false;
            submitButton.textContent = 'Pay RM <%= amount %>.00';

            // After a short delay, redirect to failed page with error
            setTimeout(() => {
                window.location.href = `/participant/payment-failed?error=${encodeURIComponent(error.message)}`;
            }, 2000);
        }
    });

    // Handle real-time validation errors
    cardElement.on('change', ({error}) => {
        const displayError = document.getElementById('card-errors');
        if (error) {
            displayError.textContent = error.message;
        } else {
            displayError.textContent = '';
        }
    });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>